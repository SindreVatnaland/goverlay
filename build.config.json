{
	"appId": "com.Demo.app",
	"productName": "Demo",
	"directories": {
		"output": "dist"
	},
	"artifactName": "Demo-${version}-${os}-${arch}.${ext}",
	"win": {
		"icon": "bin/static/favicon.ico",
		"sign": false,
		"target": [
			{
				"target": "nsis",
				"arch": ["x64"]
			}
		]
	},
	"nsis": {
		"oneClick": true,
		"perMachine": false,
		"allowToChangeInstallationDirectory": false,
		"differentialPackage": true
	},
	"linux": {
		"icon": "bin/static/favicon.ico",
		"target": [
			{
				"target": "AppImage",
				"arch": ["x64"]
			}
		]
	},
	"mac": {
		"icon": "bin/static/icon.png",
		"target": ["default"],
		"extraResources": ["res", "favicon.png"],
		"entitlements": "entitlements.mac.plist",
		"entitlementsInherit": "entitlements.mac.plist",
		"hardenedRuntime": true,
		"files": [
			"build_electron/**/*",
			"build/**/*",
			"node_modules/**/*",
			{
				"from": "demo-overlays",
				"to": "build_electron/electron/demo-overlays"
			}
		]
	},
	"executableName": "Injection Demo",
	"files": [
    "client/dist/**/*",
    "build_electron/**/*",
    "build/**/*",
    {
        "from": "node_modules",
        "filter": ["dependencies"]
    },
    {
        "from": "demo-overlays",
        "to": "build_electron/electron/demo-overlays"
    },
    {
        "from": "electron-overlay",
        "to": "build_electron/electron-overlay"
    }
]

}
